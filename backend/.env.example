# =============================================
# CONFIGURAÇÕES DO SERVIDOR
# =============================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# =============================================
# GOOGLE ADS API (OPCIONAL)
# =============================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
GOOGLE_DEVELOPER_TOKEN=your_google_developer_token_here
GOOGLE_ADS_CUSTOMER_ID=your_customer_id_here

# =============================================
# SUPABASE DATABASE (OPCIONAL)
# =============================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# =============================================
# UMBLER WEBHOOK CONFIGURATION
# =============================================
# URL do webhook que o Umbler deve chamar
# Exemplo: https://seu-dominio.com/api/umbler/webhook
WEBHOOK_URL=http://localhost:3001/api/umbler/webhook

# Chave secreta para validar webhooks (opcional)
WEBHOOK_SECRET=your_webhook_secret_key_here